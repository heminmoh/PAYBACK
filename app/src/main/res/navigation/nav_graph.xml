<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/hitDetailActivity"
        android:name="com.example.payback.activities.HitDetailActivity"
        android:label="HitDetailActivity" />
    <navigation android:id="@+id/navigation2"
        app:startDestination="@id/mainActivity">
        <activity
            android:id="@+id/mainActivity"
            android:name="com.example.payback.activities.MainActivity"
            android:label="activity_main"
            tools:layout="@layout/activity_main" />
        <action
            android:id="@+id/action_global_hitContentsActivity2"
            app:destination="@id/navigation3" />
    </navigation>
    <navigation android:id="@+id/navigation3"
        app:startDestination="@id/hitContentsActivity">
        <activity
            android:id="@+id/hitContentsActivity"
            android:name="com.example.payback.activities.HitContentsActivity"
            android:label="HitContentsActivity" />
